doctype html
html(lang="es")
    head
        meta(charset="utf-8")
        meta(charset="utf-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        <!-- Mobile viewport optimization h5bp.com/ad -->
        meta(name="HandheldFriendly", content="True")
        meta(name="MobileOptimized", content="320")
        meta(name="viewport", content="width=device-width, initial-scale=1")
        meta(http-equiv="cleartype", content="on")
        meta(name="revisit-after", content="3 month")
        meta(name="robots", content="index, follow")
        meta(name="author", content="Lequar")
        block vars
        block seo
            title Sara y Sergio - #{title}
            meta(name="description", content="#{description}")
            meta(name="abstract", content="#{abstract}")
            meta(name="keywords", content="#{keywords}")
            link(rel="canonical", href="#{canonical}")
            link(rel="shortlink", href="#{shortlink}")
        block seo-facebook
            meta(property="og:title", content="#{title}")
            meta(property="og:type", content="website")
            meta(property="og:image", content="#{image}")
            meta(property="og:url", content="#{url}")
            meta(property="og:site_name", content="Drag & Drop")
            meta(property="og:description", content="#{description}")
        block seo-twitter
            meta(name="twitter:url", content="#{url}")
            meta(name="twitter:title", content="#{title}")
            meta(name="twitter:description", content="#{title}")
        block css
            link(href='/styles/main.css', rel="stylesheet", media="screen")
            link(href="https://fonts.googleapis.com/css?family=Arvo:400,700|Titillium+Web:200,300,400,600,700", rel="stylesheet")
        block top-script
            script(src="/scripts/jquery.js")
            script(src='/scripts/modernizr.custom.js')
            script(src='/scripts/stepsForm.js')
            script(src='/scripts/countdown.js')
            script(src='/scripts/classie.js')
            script(src='/scripts/uiMorphingButton_fixed.js')
            //- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries
            <!--[if lt IE 9]>
            script(src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.7.0/html5shiv.js")
            script(src="//cdnjs.cloudflare.com/ajax/libs/respond.js/1.4.2/respond.js")
            <![endif]-->
    body#backtotop
        include ./_includes/_header.jade
        block content
        include ./_includes/_footer.jade
        block bottom-script
            //- script(src='https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.1.3/owl.carousel.min.js')
            script(src="/scripts/photostack.js")
            //- script(src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBnKPexPZKAn4Qv4yrfR7XZbEgIcJaL9Dg")
            script(src='/scripts/scripts.js')


